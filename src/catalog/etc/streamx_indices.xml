    <index identifier="streamx_storefront_catalog">
        <type name="product" mapping="StreamX\ConnectorCatalog\Index\Mapping\Product">
            <data_providers>
                <data_provider name="attributes">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\AttributeData</data_provider>
                <data_provider name="bundle_options_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\BundleOptionsData</data_provider>
                <data_provider name="category_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\CategoryData</data_provider>
                <data_provider name="price_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\PriceData</data_provider>
                <data_provider name="media_gallery">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\MediaGalleryData</data_provider>
                <data_provider name="link_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\ProductLinksData</data_provider>

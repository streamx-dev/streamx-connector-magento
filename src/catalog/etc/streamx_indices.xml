<indices xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:StreamX_ConnectorCore:etc/streamx_indices.xsd">

    <index identifier="streamx_storefront_catalog">
        <type name="product">
            <data_providers>
                <!-- TODO review the providers; remove ones we don't need; trim data produced by remaining ones to only the data we need -->
                <data_provider name="attributes">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\AttributeData</data_provider>
                <data_provider name="bundle_options_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\BundleOptionsData</data_provider>
                <data_provider name="category_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\CategoryData</data_provider>
                <data_provider name="price_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\PriceData</data_provider>
                <data_provider name="media_gallery">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\MediaGalleryData</data_provider>
                <data_provider name="quantity_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\Quantity</data_provider>
                <data_provider name="configurable_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\ConfigurableData</data_provider>
                <data_provider name="custom_options">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\CustomOptions</data_provider>
                <data_provider name="data_cleaner">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Product\DataCleaner</data_provider>
            </data_providers>
        </type>
        <type name="category">
            <data_providers>
                <data_provider name="category_data">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Category\CategoryDataFormatter</data_provider>
            </data_providers>
        </type>
        <type name="attribute">
            <data_providers>
                <data_provider name="options">StreamX\ConnectorCatalog\Model\Indexer\DataProvider\Attribute\Options</data_provider>
            </data_providers>
        </type>
    </index>
</indices>

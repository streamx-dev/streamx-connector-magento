<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Indexer/etc/indexer.xsd">
    <indexer id="streamx_product_indexer" view_id="streamx_product_indexer"
             class="StreamX\ConnectorCatalog\Model\Indexer\Product">
        <title translate="true">StreamX Product Indexer</title>
        <description translate="true">Update Products data in StreamX</description>
        <dependencies>
            <indexer id="catalog_product_price" />
            <indexer id="cataloginventory_stock" />
        </dependencies>
    </indexer>
    <indexer id="streamx_category_indexer" view_id="streamx_category_indexer"
             class="StreamX\ConnectorCatalog\Model\Indexer\Category">
        <title translate="true">StreamX Category Indexer</title>
        <description translate="true">Update Category data in StreamX</description>
    </indexer>
    <indexer id="streamx_attribute_indexer" view_id="streamx_attribute_indexer"
             class="StreamX\ConnectorCatalog\Model\Indexer\Attribute">
        <title translate="true">StreamX Attributes Indexer</title>
        <description translate="true">Update Products with changed Attributes in StreamX</description>
    </indexer>
</config>

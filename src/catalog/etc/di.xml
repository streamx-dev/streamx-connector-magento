<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="StreamX\ConnectorCore\Api\IndexersConfigInterface" type="StreamX\ConnectorCatalog\Model\Indexer\IndexersConfig"/>

    <type name="Magento\Framework\Mview\ViewInterface">
        <plugin name="updateMviewSubscriptions" type="StreamX\ConnectorCatalog\Plugin\Mview\ViewPlugin"/>
    </type>

    <preference for="StreamX\ConnectorCatalog\Model\ResourceModel\Product\BaseSelectModifierInterface"
                type="StreamX\ConnectorCatalog\Model\ResourceModel\Product\CompositeWithWebsiteModifier" />

    <virtualType name="StreamX\ConnectorCatalog\Model\ResourceModel\Product\CompositeWithWebsiteModifier"
                 type="StreamX\ConnectorCatalog\Model\ResourceModel\Product\CompositeBaseSelectModifier">
        <arguments>
            <argument name="baseSelectModifiers" xsi:type="array">
                <item name="website" xsi:type="object">StreamX\ConnectorCatalog\Model\ResourceModel\Product\WebsiteSelectModifier</item>
                <item name="status" xsi:type="object">StreamX\ConnectorCatalog\Model\ResourceModel\Product\StatusSelectModifier</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Catalog\Model\Product">
        <plugin name="update_product_in_es" type="StreamX\ConnectorCatalog\Plugin\Indexer\Product\Save\UpdateProductDataPlugin"/>
    </type>

    <type name="Magento\Catalog\Model\Category">
        <plugin name="update_category_in_es" type="StreamX\ConnectorCatalog\Plugin\Indexer\Category\Save\UpdateCategoryDataPlugin"/>
    </type>

    <type name="Magento\Catalog\Model\ResourceModel\Eav\Attribute">
        <plugin name="update_attribute_in_es" type="StreamX\ConnectorCatalog\Plugin\Indexer\Attribute\Save\UpdateAttributeDataPlugin"/>
    </type>

    <type name="Magento\CatalogInventory\Model\ResourceModel\QtyCounterInterface">
        <plugin name="register_products" type="StreamX\ConnectorCatalog\Plugin\Indexer\CatalogInventory\QtyCorrectPlugin"/>
    </type>

    <type name="Magento\CatalogInventory\Observer\RevertQuoteInventoryObserver">
        <plugin name="update_product_in_es" type="StreamX\ConnectorCatalog\Plugin\Indexer\CatalogInventory\RevertQuoteInventoryObserverPlugin"/>
    </type>
    <type name="Magento\CatalogInventory\Observer\ReindexQuoteInventoryObserver">
        <plugin name="update_product_in_es" type="StreamX\ConnectorCatalog\Plugin\Indexer\CatalogInventory\ReindexQuoteInventoryObserverPlugin"/>
    </type>
    <type name="Magento\Catalog\Controller\Adminhtml\Product\Action\Attribute\Save">
        <plugin name="update_product_in_es" type="StreamX\ConnectorCatalog\Plugin\Controller\Catalog\Adminhtml\Product\Action\AttributeSavePlugin"/>
    </type>
</config>

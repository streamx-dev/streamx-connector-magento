<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
  <route url="/V1/coverage/start" method="PUT">
    <service class="StreamX\ConnectorCore\Api\Rest\CodeCoverageEndpointInterface" method="startCoverage"/>
    <resources>
      <resource ref="anonymous"/>
    </resources>
  </route>
  <route url="/V1/coverage/stop-and-reset" method="PUT">
    <service class="StreamX\ConnectorCore\Api\Rest\CodeCoverageEndpointInterface" method="stopAndResetCoverage"/>
    <resources>
      <resource ref="anonymous"/>
    </resources>
  </route>
  <route url="/V1/coverage/get" method="GET">
    <service class="StreamX\ConnectorCore\Api\Rest\CodeCoverageEndpointInterface" method="getCoverage"/>
    <resources>
      <resource ref="anonymous"/>
    </resources>
  </route>
</routes>

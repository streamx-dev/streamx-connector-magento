<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="StreamX\ConnectorCore\Api\BulkLoggerInterface" type="StreamX\ConnectorCore\Index\BulkLogger"/>
    <preference for="StreamX\ConnectorCore\Api\Client\ClientInterface" type="StreamX\ConnectorCore\Streamx\Client"/>
    <preference for="StreamX\ConnectorCore\Api\Client\ConfigurationInterface" type="StreamX\ConnectorCore\Streamx\ClientConfiguration"/>
    <preference for="StreamX\ConnectorCore\Api\Index\TypeInterface" type="StreamX\ConnectorCore\Index\Type"/>
    <preference for="StreamX\ConnectorCore\Api\ConvertValueInterface" type="StreamX\ConnectorCore\Indexer\ConvertValue"/>
    <preference for="StreamX\ConnectorCore\Api\IndexOperationInterface" type="StreamX\ConnectorCore\Index\IndexOperations"/>
    <preference for="StreamX\ConnectorCore\System\GeneralConfigInterface" type="StreamX\ConnectorCore\System\GeneralConfig"/>

    <type name="StreamX\ConnectorCore\Logger\IndexerLogger">
        <arguments>
            <argument name="name" xsi:type="string">streamxIndexerLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="info" xsi:type="object">StreamX\ConnectorCore\Logger\Handler\Info</item>
                <item name="error" xsi:type="object">StreamX\ConnectorCore\Logger\Handler\Error</item>
            </argument>
        </arguments>
    </type>
    <type name="StreamX\ConnectorCore\Index\BulkLogger">
        <arguments>
            <argument name="logger" xsi:type="object">StreamX\ConnectorCore\Logger\IndexerLogger</argument>
        </arguments>
    </type>

    <!-- Prevent sensitive fields from getting dumped with store config -->
    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="streamx_connector_settings/streamx_client/auth_token" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="publish_single_entity" xsi:type="object">
                    StreamX\ConnectorCore\Console\Command\PublishSingleEntityCommand
                </item>
                <item name="publish_all_entities" xsi:type="object">
                    StreamX\ConnectorCore\Console\Command\PublishAllEntitiesCommand
                </item>
                <item name="reset_streamx_indexers" xsi:type="object">
                    StreamX\ConnectorCore\Console\Command\ResetStreamxIndexersCommand
                </item>
            </argument>
        </arguments>
    </type>

    <type name="StreamX\ConnectorCore\Console\Command\PublishAllEntitiesCommand">
        <arguments>
            <argument name="eventManager" xsi:type="object">Magento\Framework\Event\ManagerInterface\Proxy</argument>
        </arguments>
    </type>
</config>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="index_single_entity" xsi:type="object">StreamX\ConnectorCore\Console\Command\SingleEntityIndexCommand</item>
                <item name="rebuild" xsi:type="object">StreamX\ConnectorCore\Console\Command\RebuildEsIndexCommand</item>
                <item name="vsbridge_reset" xsi:type="object">StreamX\ConnectorCore\Console\Command\ResetEsIndexCommand</item>
            </argument>
        </arguments>
    </type>

    <type name="StreamX\ConnectorCore\Console\Command\RebuildEsIndexCommand">
        <arguments>
            <argument name="eventManager" xsi:type="object">Magento\Framework\Event\ManagerInterface\Proxy</argument>
        </arguments>

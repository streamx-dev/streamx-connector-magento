{
  "name": "streamx/magento-connector",
  "description": "Magento connector for StreamX - a Digital Experience Data Mesh.",
  "version": "1.0.0",
  "type": "magento2-module",
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    },
    {
      "type": "path",
      "url": "../streamx-ingestion-php"
    }
  ],
  "require": {
    "php": ">=7.4",
    "streamx/ingestion-client": "*",
    "magento/framework": ">=101.0.0",
    "magento/module-store": ">=100.2.0",
    "magento/module-backend": ">=100.2.0",
    "magento/module-catalog": ">=102.0.0",
    "magento/magento-composer-installer": "*",
    "elasticsearch/elasticsearch": "~5.1|~6.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "ext-xdebug": "*"
  },
  "autoload": {
    "files": [
      "src/main/registration.php"
    ],
    "psr-4": {
      "Divante\\VsbridgeIndexerCore\\": "src/main/core",
      "Divante\\VsbridgeIndexerCatalog\\": "src/main/catalog"
    }
  },
  "config": {
    "allow-plugins": {
      "magento/composer-dependency-version-audit-plugin": true,
      "magento/magento-composer-installer": true
    }
  }
}
